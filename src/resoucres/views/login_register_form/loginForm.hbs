<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />

        <title>Document</title>
        <link rel='stylesheet' href='css/bootstrap.css' />
        <link rel='stylesheet' href='css/login.css' />
        <link
            rel='stylesheet'
            href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'
        />

    </head>
    <body>
        <div class='login_container' style="background: url('images/backgroundform.jpg'); height:100%;">

            <div class='content'>
                <div class='text-center'>
                    <img src='images/Harvard-Emblem.png' style='max-width: 100%;max-height: 95px;' />
                </div>
                <h4>ĐĂNG NHẬP HỆ THỐNG</h4>
                <form method='post' action='login'>
                    <div class='mb-3'>
                        <label for='exampleInputmssv' class='form-label'>Tên đăng nhập</label>
                        <input
                            type='text'
                            class='form-control'
                            id='exampleInputmssv'
                            name='accountName'
                            required
                            aria-describedby='emailHelp'
                        />

                    </div>
                    {{#if userData.errCode}}

                        <div class='alert alert-warning' role='alert'>
                            <i class='fa fa-exclamation-triangle' aria-hidden='true'></i>
                            Tài khoản hoặc mật khẩu sai vùi lòng nhập lại
                        </div>

                    {{/if}}
                    <div class='mb-3'>
                        <label for='exampleInputPassword1' class='form-label'>Mật khẩu</label>

                        <input type='password' class='form-control' id='exampleInputPassword1' name='psw' required />
                    </div>
                    <input type='radio' id='student' name='position' value='1' required />
                    <label for='student'>Đăng nhập cho học sinh </label><br />
                    <input type='radio' id='teacher' name='position' value='2' required />
                    <label for='teacher'>Đăng nhập cho giáo viên </label><br />

                    <button type='submit' class='btn btn-primary'>Đăng nhập</button>
                    <a href='register_form'>Đăng ký sinh viên</a>

                </form>

            </div>
        </div>
    </body>

</html>