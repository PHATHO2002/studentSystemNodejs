<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <title>Document</title>
        <link rel='stylesheet' href='css/bootstrap.css' />
        <link rel='stylesheet' href='css/login.css' />

    </head>
    <body>
        <div class='login_container' style="background: url('images/backgroundform.jpg'); height:100%;">

            <div class='content'>
                <div class='text-center'>
                    <img src='images/congthongtinsinhvien.png' style='max-width: 100%;max-height: 95px;' />
                </div>
                <h4>ĐĂNG NHẬP HỆ THỐNG</h4>
                <form method='post' action='user/login'>
                    <div class='mb-3'>
                        <label for='exampleInputmssv' class='form-label'>Mã số sinh viên</label>
                        <input
                            type='text'
                            class='form-control'
                            id='exampleInputmssv'
                            name='mssv'
                            aria-describedby='emailHelp'
                        />
                        <div id='emailHelp' class='form-text'>We'll never share your mssv with anyone else.</div>
                    </div>
                    <div class='mb-3'>
                        <label for='exampleInputPassword1' class='form-label'>Mật khẩu</label>
                        <input type='password' class='form-control' id='exampleInputPassword1' name='psw' />
                    </div>

                    <button type='submit' class='btn btn-primary'>Đăng nhập</button>
                    <a href='register_form'>Đăng ký tại đây</a>
                </form>

            </div>
        </div>
    </body>
</html>